<?xml version="1.0" encoding="UTF-8"?>
<!--
    Author     : Daniel PÃ¶tzinger
    Description:
        Collection of all available selenium tests reagarding the backend
-->
<phpunit backupGlobals="false"
         backupStaticAttributes="true"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="true"
         stopOnFailure="true"
         syntaxCheck="false">
    <php>
        <ini name="memory_limit" value="2G" />
        <ini name="max_execution_time" value="5000" />
    </php>
    <selenium>
        <browser name="Firefox Testing Phoenix"
               browser="*chrome"
               host="localhost"
               port="4444"
               timeout="30000" 
               url="http://dev.typo3-5.local.lan/" />
    </selenium>
    <testsuites>
        <testsuite name="Backend related tests">
            <directory suffix="Test.php">./Backend/</directory>
        </testsuite>
    </testsuites>
</phpunit>